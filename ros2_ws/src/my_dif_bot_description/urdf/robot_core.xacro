<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

	<xacro:property name="wheel_radius" value="0.0325"/>
	<xacro:property name="wheel_length" value="0.025"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="red">
        <color rgba="1 0.1 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

	<link name="odom"/>

    <!-- BASE LINK -->

    <link name="base_link">
		<visual>
            <origin xyz="-0.05 0 0.035"/>
            <geometry>
                <box size="0.2 0.23 0.07"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <origin xyz="-0.05 0 0.035"/>
            <geometry>
                <box size="0.2 0.23 0.07"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="-0.05 0 0.035" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

	<joint name="base_link_joint" type="fixed">
		<parent link="odom"/>
		<child link="base_link"/>
		<origin xyz="0 0 0" rpy="0 0 0"/>
	</joint>

	<joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.095 0.027" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_length}"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_length}"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="${wheel_length}" radius="${wheel_radius}">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

	<joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.095 0.027" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_length}"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_length}"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="${wheel_length}" radius="${wheel_radius}">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

	<joint name="base_link_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_wheel"/>
        <origin xyz="-0.12 0 0"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.01"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.01">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link> 

	<joint name="base_link_lidar_joint" type="fixed">
        <parent link="base_link"/>
        <child link="lidar"/>
        <origin xyz="0 0 0.07"/>
    </joint>

    <link name="lidar">
        <visual>
			<origin xyz="0 0 0.045"/>
            <geometry>
                <cylinder radius="0.025" length="0.09"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
			<origin xyz="0 0 0.045"/>
            <geometry>
                <cylinder radius="0.025" length="0.09"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.09" radius="0.025">
            <origin xyz="0 0 0.045" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link> 


</robot>